<%- include("partials/header") -%>

<div class="content">
  <h1 id="level-title">Press A Key to Start</h1>
  <div class="container">
    <div lass="row">

      <div type="button" id="green" class="game-btn green">

      </div>

      <div type="button" id="red" class="game-btn red">

      </div>
    </div>

    <div class="row">

      <div type="button" id="yellow" class="game-btn yellow">

      </div>
      <div type="button" id="blue" class="game-btn blue">

      </div>

    </div>

  </div>

  <div class="container">

    <!-- Modal -->
    <div class="modal fade" id="gameRules" role="dialog">
      <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header bg-info">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">This is "Simon says"</h4>
          </div>

            <div class="modal-body">
              <p>Do as Simon says and click on the same button he did.</p>
            </div>

            <div class="modal-footer">
              <button type="submit" class="btn btn-default" id="startGame" data-dismiss="modal">Let's play!</button>
            </div>

        </div>

      </div>
    </div>

  </div>


<div class="container">

  <!-- Modal -->
  <div class="modal fade" id="getPlayerName" role="dialog">
    <div class="modal-dialog modal-sm">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header bg-info">
          <button type="button" class="close game-close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Well done! Nice game!</h4>
        </div>

          <div class="modal-body">
            <form>
            <label>Please enter your name:</label>
            <input type="text" name="player_name" id="playerNameId" value="Anonymous">
            </form>
          </div>

          <div class="modal-footer">
            <button type="submit" class="btn btn-default game-close" data-dismiss="modal">Submit</button>
          </div>

      </div>

    </div>
  </div>

</div>
</div>

<script src="game.js" charset="utf-8"></script>

<%- include("partials/footer") -%>
