<%- include("partials/header") -%>

  <h1>The game is currently under construction</h1>
  <h3>Please check back later</h3>
  <div lass="row">
    <button type="button" id="green" class="game-button green"></button>
    <button type="button" id="red" class="game-button red"></button>
  </div>
  <div class="row d-block">
    <button type="button" id="yellow" class="game-button yellow"></button>
    <button type="button" id="blue" class="game-button blue"></button>
  </div>

</div>


  <div class="container">

    <!-- Modal -->
    <div class="modal fade" id="gameRules" role="dialog">
      <div class="modal-dialog modal-sm">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header bg-info">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">This is "Simon says"</h4>
          </div>

            <div class="modal-body">
              <p>Do as Simon says and click on the same button he did.</p>
            </div>

            <div class="modal-footer">
              <button type="submit" class="btn btn-default" id="startGame" data-dismiss="modal">Let's play!</button>
            </div>

        </div>

      </div>
    </div>

  </div>


<div class="container">

  <!-- Modal -->
  <div class="modal fade" id="getPlayerName" role="dialog">
    <div class="modal-dialog modal-sm">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header bg-info">
          <button type="button" class="close game-close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Well done! Nice game!</h4>
        </div>

          <div class="modal-body">
            <form>
            <label>Please enter your name:</label>
            <input type="text" name="player_name" id="playerNameId" value="Anonymous">
            </form>
          </div>

          <div class="modal-footer">
            <button type="submit" class="btn btn-default game-close" data-dismiss="modal">Submit</button>
          </div>

      </div>

    </div>
  </div>

</div>

<script src="jsgame.js" charset="utf-8"></script>

<%- include("partials/footer") -%>
